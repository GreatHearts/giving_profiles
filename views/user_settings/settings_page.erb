<h1> Settings Page </h1>

<div>
  <%= erb :'/users/add_donation_form' %> 
</div>

<form class='form1' action='/settings' method=post>
  <h3> Edit Your Details </h3>
  <div><label> Name </label><input name='name' value="<%=user['name']%>"/></div>
  <div><label> Address </label><input name='address' value="<%=user['address']%>"/></div>
  <div><label> My Giving Philosophy </label><textarea rows=6 name='philosophy'><%=user['philosophy']%></textarea></div>
  <div><label> My Favorite Organization</label><input name='fav_org' value="<%=user['fav_org']%>"/></div>
  <div><label> My Favorite Organization - Explanation</label><textarea rows=6 name='fav_org_text'><%=user['fav_org_text']%></textarea></div>
  <button class='<%=b1%>'>Submit</button>
</form>