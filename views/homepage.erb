<style>
.homepage .w30 {
  width: 30px;
  height: 30px;
  margin-right: 20px;
  text-align: center;
}
</style>
<div class='homepage'>
  <% if cu %>
  <div class='ct'>
    <%= erb :'/feed/feed' %>
  </div>
  <% else %>
  <div class='col-md-12' style='margin-top:20px'>
  </div>
  <div class='col-md-8' style='zbackground-color:red; color: grey; border-right:1px solid grey'>
    <div style='margin-left:10%'>
      <h1> Char Star </h1>
      <div>
        <h3> <i class='fa fa-gift w30'></i> Track your giving </h3> 
        <h3> <i class='fa fa-group w30'></i> See what causes your friends care about </h3> 
        <h3> <img src='/img/coinbox.png' class=w30 /> Discover new charities </h3> 
      </div>
    </div>
  </div>
  <div class='col-md-4 ct' style='zbackground-color: blue'>
    <div>
      <button style='margin-top:40px' class="btn btn-lg <%=b1%>" onclick='fbLogin()'> Continue With Facebook </button>
    </div>
  </div>
  <% end %>
</div>

<script>
console.log('setting FB functions')
console.log('window.fbInitialized',window.fbInitialized)
  window.fbAsyncInit = function() {
    if (window.fbInitialized) {
      console.log('already called fbInit')
      return;
    }
    console.log("initalizing FB");
    FB.init({
      appId            : <%= $prod ? '183661335520562' : '123640948401560' %>,
      autoLogAppEvents : true,
      xfbml            : true,
      version          : 'v2.10',
      channelUrl       : '<%= $root_url %>/channel_url.html'
    });
    window.fbInitialized = true;
  };


  if (false) {
    (function(d, s, id){
     var js, fjs = d.getElementsByTagName(s)[0];
     if (d.getElementById(id)) {return;}
     js = d.createElement(s); js.id = id;
     js.src = "https://connect.facebook.net/en_US/sdk.js";
     fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));  
  }
  
  window.fbLogin = function(){
    // if (window.fbInitialized) {
    //   console.log('already called fbInit')
    //   return;
    // }
    if (!window.FB) return alert('Please try again in 5 seconds.')
    FB.login(function(response) {
      if (response.status === 'connected') {
        document.location= `/fb_login?token=${response.authResponse.accessToken}`;
      } else {
        console.log('fbLogin fail ',response)
      }
    });
  }

  window.fbShare = function(desc) {
    FB.ui({
      method: 'share',
      href: fullPath+`?og_desc=${desc}`,
    }, function(response){});  
  }  
</script>