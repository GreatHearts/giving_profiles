<div class="search-results container">

  <div class="row justify-content-between">
    <h2 class="pl-3 pl-md-0 subtitle">Filter By</h2>
    <h3 class="col body-toned-down text-right">Clear All</h3>
  </div>
  <div class="row">
    <div class="pl-3 pl-md-0 mt-3">
      <div class="button-light">Badge</div>
      <div class="button-light">Category</div>
    </div>
  </div>

  <% if @users.present? %>
    <div class="row justify-content-between mt-3">
      <h2 class="pl-3 pl-md-0 subtitle">People</h2>
      <div class="col body-toned-down text-right d-lg-none">
        <%= link_to "See All", user_search_results_path(@query) %>
      </div>
      <div class="col body-toned-down text-right  d-none d-lg-block">
        <%= link_to user_search_results_path(@query) do %>
          <%= fa_icon "arrow-right", text: "See all search results", class: "mr-3" %>
        <% end %>
      </div>

    </div>

    <div class="row mt-2">
      <% @users.each do |result| %>
        <%= link_to result.searchable, class: "container mt-2 mb-4 col-12 col-lg-3 col-md-4" do %>
          <div class="row mw-100">
            <div class="col-2 p-md-0">
              <%= image_tag(result.searchable.profile_image, class: "rounded-circle avatar") %>
            </div>
            <div class="col-10 row mt-1">
              <h3 class="col-12 heading smaller ml-2">
                <%= result.searchable.name %>
              </h3>
              <div class="col-12 body-medium-toned-down smaller ml-2">
                <%= result.searchable.location %>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% end %>

  <% if @organizations.present? %>
    <div class="row justify-content-between mt-4">
      <h2 class="pl-3 pl-md-0 subtitle">Organizations</h2>
      <h3 class="col body-toned-down text-right d-lg-none">
        <%= link_to "See All", organization_search_results_path(@query) %>
      </h3>
      <h3 class="col body-toned-down text-right d-none d-lg-block">
        <%= link_to organization_search_results_path(@query) do %>
          <%= fa_icon "arrow-right", text: "See all search results", class: "mr-3" %>
        <% end %>
      </h3>
    </div>

    <div class="row mt-3">
      <% @organizations.each do |result| %>
        <div class="col-12 mb-4 col-md-6 container">
          <div class="row">
            <div class="col-2 col-md-1 p-md-0 w-50 mr-1 mr-lg-0">
              <%= image_tag(result.searchable.avatar_url, class: "rounded-circle avatar") %>
            </div>
            <div class="col-10 row mt-1 w-50">
              <h3 class="col-12 ml-md-2 ml-lg-0 heading smaller">
                <%= result.searchable.name %>
              </h3>
              <div class="col-12 ml-md-2 ml-lg-0 body-medium-toned-down smaller">
                <%= result.searchable.location %>
              </div>
              <div class="col-12 ml-md-2 ml-lg-0 body-medium-toned-down mt-1">
                <%= render "shared/cause_label", cause: result.searchable.cause %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
