<div class="search-results container">

  <div class="row justify-content-between">
    <div class="col title-section">FILTER BY</div>
    <div class="col body-toned-down text-right">Clear All</div>
  </div>
  <div class="row">
    <div class="col mt-2">
      <div class="btn btn__filter--white button-dark ml-0 mr-2">Badge</div>
      <div class="btn btn__filter--white button-dark ml-2">Category</div>
    </div>
  </div>

  <% if @users.present? %>
    <div class="row justify-content-between mt-3">
      <div class="col title-section">PEOPLE</div>
      <div class="col body-toned-down text-right">See All</div>
    </div>

    <div class="row mt-2">
      <% @users.each do |result| %>
        <div class="row col-12 col-lg-3">
          <div class="col-2 text-left">
            <%= image_tag(result.searchable.profile_image, alt: "rss feed", class: "rounded-circle avatar") %>
          </div>
          <div class="col-10 row">
            <div class="col-12 heading">
              <%= result.searchable.name %>
            </div>
            <div class="col-12 body-medium-toned-down">
              <%= result.searchable.location %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>

  <% if @organizations.present? %>
    <div class="row justify-content-between mt-3">
      <div class="col title-section">ORGANIZATIONS</div>
      <div class="col body-toned-down text-right">See All</div>
    </div>

    <div class="row mt-2">
      <% @organizations.each do |result| %>
        <div class="col-2 text-left">
          <%= image_tag(result.searchable.avatar_url, alt: "rss feed", class: "rounded-circle avatar") %>
        </div>
        <div class="col-10 row">
          <div class="col-12 heading">
            <%= result.searchable.name %>
          </div>
          <div class="col-12 body-medium-toned-down">
            <%= result.searchable.location %>
          </div>
          <div class="col-12 body-medium-toned-down">
            <%= render "shared/org_type_oval", org_type: result.searchable.org_type %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
