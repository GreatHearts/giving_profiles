<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <%= render "partials/static_page_section", locals: { header_title: "Contact Us" } do %>
        Use the form below to drop us an email.
      <% end %>
      <div class="col-lg-5 divider"></div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-3 title-section">YOUR FEEDBACK</div>
    <div class="col-lg-8">
      <form>
        <div class="form-group">
          <label class for="name_input">Name</label>
          <input type="email" class="form-control" id="name_input" aria-describedby="emailHelp" placeholder="Enter your name">
        </div>
        <div class="form-group">
          <label class for="emailInput">Email</label>
          <input type="email" class="form-control" id="emailInput" aria-describedby="emailHelp" placeholder="Enter your email">
        </div>
        <div class="form-group">
          <label class for="feedbBackTextarea">Feedback</label>
          <textarea class="form-control" id="feedbBackTextarea" aria-describedby="Feedback" placeholder="Enter your feedback" rows="4"></textarea>
        </div>
        <button type="submit" class="col-lg-6 col button-light">Send</button>
      </form>
    </div>
  </div>
</div>
