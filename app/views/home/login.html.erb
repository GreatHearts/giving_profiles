<section class="login">
  <div class="login__background"></div>
  <div class="d-flex w-100 h-100 p-3 mx-auto flex-column">
    <main role="main">
      <div class="card col-sm col-lg-3 px-0 ml-lg-auto">
        <div class="card-body d-flex align-items-start flex-column">
          <h5 class="card-title">Share your donations.</h5>
          <p class="body-toned-down">Share your donations with your friends and the community.</p>
          <p class="body-toned-down">See what charitable causes your friends care about.</p>
          <div class="d-flex justify-content-center w-100">
            <%= link_to user_facebook_omniauth_authorize_path, class: "login__facebook-button btn d-flex align-items-center mt-5" do %>
              <%= fa_icon "facebook-square", type: :brand, class: "fa-2x mr-3" %>
              Login with Facebook
            <% end %>
          </div>
        </div>
      </div>
      <div class="col-sm p-0">
        <small class="body-small-toned-down">
          Photo by <a href="https://unsplash.com/@perrygrone" target="_blank">Perry Grone</a> on <a href="https://unsplash.com/" target="_blank">Unsplash</a>
        </small>
      </div>
    </main>
  </div>
</section>
