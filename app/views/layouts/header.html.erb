<header class="page-header  <%= 'page-header--no-margin' if login_page? %>">

  <div class='logo'>
    <a href="/">GIVING PROFILES</a>
  </div>

  <!-- This is just a place holder for now. -->
  <div class='header-search'>
    <%= fa_icon "search", text: "Search..." %>
  </div>

  <% if user_signed_in? %>
    <%= link_to 'Log Out', destroy_user_session_path, method: :delete, class:'page-header__login-btn btn btn-secondary'  %>
  <% else %>
    <%= link_to 'Log In', root_path, class:'page-header__login-btn btn btn-secondary'  %>
  <% end %>
</header>
