<%= render "users/profile_sections/profile_section", title: "DONATIONS BY CAUSES"  do %>
  <% if @donations_by_causes.present? %>
  <div class="donations-bars">
    <% @donations_by_causes.each do |cause, percent| %>
      <div class='<%= "#{cause}-bar donation-bar bg_color_#{cause}" %>' data-percent='<%= percent %>'></div>
    <% end %>

    <% @donations_by_causes.each do |cause, percent| %>
      <div class='<%= "donation-cause-text" %>' data-percent='<%= percent %>'>#<%= cause.capitalize %></div>
    <% end %>

    <% @donations_by_causes.each do |cause, percent| %>
      <div class='<%= "donation-percent" %>' data-percent='<%= percent %>'><%= percent %>%</div>
    <% end %>

    <div class='<%= "highest-donation-bar bg_color_#{@donations_by_causes.first[0]}" %>'></div>
  </div>
  <% end %>

  <div class="reason-for-giving"><%= @user.favorite_cause_description %></div>
<% end %>
