<%= render "users/profile/profile_section", title: "Past Donations" do %>
  <div class="mini-user-profile-info">
    <%= image_tag(@user.profile_image, class: "rounded-circle avatar mr-3") %>
    <span class="heading"><%= @user.name %></span>
  </div>

  <% if @user.donations.present? %>
    <div class="past-donations">
      <div class="body-medium d-flex flex-row align-items-center mb-3">
        <%= fa_icon "search", class: "mr-2" %>
        <%= text_field_tag nil, nil, placeholder: "Search my past donations", class: "border-0 p-1 past-donations__search" %>
      </div>

      <div class="past-donations__cards p-1">
        <%= render partial: "users/profile/past_donation", collection: @user.donations.reverse.compact %>
      </div>

      <% if @user.donations.length > 4 %>
        <%= render "shared/scroll_arrow" %>
      <% end %>
    </div>
  <% end %>
<% end %>
