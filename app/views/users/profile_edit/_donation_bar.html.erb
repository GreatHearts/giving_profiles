<div class="donation-bar-container" data-cause="<%= cause %>" data-percent="<%= percent %>" data-is-highest="<%= highest %>">
  <div class="donation-bar-container__bar bg_color_<%= cause %>"></div>
  <div class="donation-bar-container__cause">#<%= cause %></div>
  <div class="donation-bar-container__percent"><%= percent %>%</div>
  <% if highest %>
    <div class="donation-bar-container__highest-bar bg_color_<%= cause %>"></div>
  <% end %>
</div>