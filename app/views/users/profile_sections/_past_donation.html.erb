<div class="card donation-card container">
  <div class="row">
    <%= link_to donation.user do %>
      <div class="col-2 mx-auto <%= "#{show_donor ? '' : 'd-none'}" %>">
        <%= image_tag(donation.user.avatar_url, alt: "rss feed", class: "rounded-circle avatar") %>
      </div>
    <% end %>
    <div class=<%= "#{show_donor ? 'col-10 offset-2' : 'col-12'}" %>>
      <div class="donation-card__header">
        <% if show_donor %>
          <%= link_to donation.user.full_name, donation.user, class: 'donation-card__donor-name heading' %>
        <% end %>
        <div class="donated-to-text"> Donated to </div>
        <a href="#" class="donation-card__menu <%= "#{donation.user == current_user ? '' : 'd-none'}" %>"><%= fa_icon "ellipsis-v" %></a> <!-- Place holder for now. -->
      </div>

      <div class="donation-card__organization body-medium">
        <%= donation.organization.name %>
      </div>
      <div class="donation-card__time tag"><%= donation.created_at.strftime("%I:%M %p - %b %e, %Y") %></div>
    </div>
  </div>
</div>
