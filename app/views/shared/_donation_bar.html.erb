<div class="donation-bar" data-cause="<%= cause %>" data-percent="<%= percent %>">
  <div class="donation-bar__bar bg_color_<%= cause %>"></div>
  <div class="donation-bar__cause">#<%= cause %></div>
  <div class="donation-bar__percent"><%= percent > 0 ? percent : "<1" %>%</div>
  <div class="donation-bar__under-bar bg_color_<%= cause %>"></div>
</div>
